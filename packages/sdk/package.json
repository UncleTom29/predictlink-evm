{
  "name": "@predictlink/sdk",
  "version": "1.0.0",
  "description": "Official TypeScript/JavaScript SDK for PredictLink Oracle",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "predictlink",
    "oracle",
    "blockchain",
    "bnb-chain",
    "defi",
    "prediction-markets",
    "web3",
    "sdk"
  ],
  "author": "PredictLink Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uncletom29/predictlink-evm/.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/uncletom29/predictlink-evm/issues"
  },
  "homepage": "https://docs.predictlink.io",
  "dependencies": {
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}