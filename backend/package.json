{
  "name": "predictlink-backend",
  "version": "1.0.0",
  "description": "PredictLink Backend Services",
  "scripts": {
    "build": "lerna run build",
    "start": "lerna run start --parallel",
    "start:dev": "lerna run start:dev --parallel",
    "start:prod": "lerna run start:prod --parallel",
    "test": "lerna run test",
    "test:cov": "lerna run test:cov",
    "lint": "lerna run lint",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm migration:run -d src/common/database/typeorm.config.ts",
    "migration:revert": "typeorm migration:revert -d src/common/database/typeorm.config.ts"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lerna": "^7.4.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "api-gateway",
    "event-manager",
    "resolution-engine",
    "blockchain-service"
  ]
}
